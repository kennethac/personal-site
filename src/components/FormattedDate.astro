---
interface Props {
    date: Date;
    styleTag?: string;
}

const {date, styleTag} = Astro.props;
---

<time datetime={date.toISOString()} style={styleTag}>
    {
        date.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
        })
    }
</time>
